extends ../layout

block content
    .row
        .col-6  
            .card 
                .card-header #{title}
                .card-body
                    form(method='POST' action='')
                        input(type='hidden', name='_csrf', value=_csrf)
                        .form-group
                            label(for='name') Genre
                            input#name.form-control(type='text' name='name' aria-describedby='name' placeholder='Enter name' value=(undefined===genre ? '' : genre.name))
                        button.btn.btn-primary(type='submit') Submit
                    
                    if errors
                        ul 
                            for error in errors
                                li!= error.massage