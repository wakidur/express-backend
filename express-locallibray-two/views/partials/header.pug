.navbar.navbar-light.fixed-top.navbar-expand-md
  .container
    a.navbar-brand(href='/')
      i.fas.fa-cube
      | Project name
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Home
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/users/contact') Contact
        li.nav-item(class=(title === 'Genre list') ? 'active' : undefined)
          a.nav-link(href='/genre/genre') Genre List
        li.nav-item(class=(title === 'Create Genre') ? 'active' : undefined)
          a.nav-link(href='/genre/genre/create') Genre
        li.nav-item(class=(title === 'Create Author') ? 'active' : undefined)
          a.nav-link(href='/genre/author/create') Author
        li.nav-item(class=(title === 'Author list') ? 'active' : undefined)
          a.nav-link(href='/genre/author') Author List
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/users/login') Login
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/users/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/users/account') My Account
              li.divider.dropdown-item
              li.dropdown-item
                a(href='/users/logout') Logout
