<form method="POST" action="">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="Titel" name="title" aria-describedby="Name of book" placeholder="Name of book"
            required="">
        <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <select class="form-control" id="author" name="author">
            {{#each authors}} 
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
     <div class="form-group">
        <label for="title">Summary</label>
        <input type="text" class="form-control" id="summary" name="summary" aria-describedby="Summary" placeholder="Summary"
            required="">
        <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input type="text" class="form-control" id="isbn" name="isbn" placeholder="ISBN13" required="">
    </div>
    {{#each genres}}
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="genre" value="{{genre._id}}" >
        <label class="form-check-label" for="defaultCheck1">
            {{{name}}}
        </label>
    </div>
    {{/each}}
    


    <button type="submit" class="btn btn-primary">Submit</button>

    <ul>
        {{#if errors}} {{#each errors}}
        <li>
            {{msg}}
        </li>
        {{/each}} {{/if}}
    </ul>
</form>